<!-- Modal -->
<div class="modal fade" id="chatNameModal" tabindex="-1" aria-labelledby="chatNameModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="chatNameModalLabel">Change the chat name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <input type="text" id="chatNameTextBox" placeholder="Chat name" value="{{chat.chatName}}">
      </div>
      <div class="modal-footer">
        <button type="button" id="cancelButton" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="chatNameButton" class="btn btn-primary" >Save</button>
      </div>
    </div>
  </div>
</div>