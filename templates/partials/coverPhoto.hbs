<!-- Modal -->
<div class="modal fade" id="coverPhotoModal" tabindex="-1" aria-labelledby="coverPhotoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="coverPhotoModalLabel">Upload a new cover photo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <input type="file" name="filePhoto" id="coverPhoto" accept="image/*">
        <div class="imagePreviewContainer">
          <img src="" alt="" id="coverPreview">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancelButton" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="coverPhotoModalButton" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>