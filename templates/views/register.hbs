<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="twitter.svg" type="image/icon type">
    <link rel="stylesheet" href="css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
     <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <title>Sign up for Twitter / Twitter</title>
</head>
<body>
    <div class="wrapper">
        <div class="loginContainer">
            <img src="twitter.svg" alt="icon" width="40rem">
            <h1>Signup to Twitter</h1> 
            {{!-- <p class="errormessage">Passwords do not match</p> --}}
            <form method="POST" id="registerForm" onsubmit="event.preventDefault(); validateForm();">
                <p class="errorMessage">{{errorMessage}}</p>
                <div>
                    <input type="text" name="firstName" value="{{firstName}}" required>
                    <label for="firstName">First Name</label>
                </div>
                <div>
                    <input type="text" name="lastName" value="{{lastName}}" required>
                    <label for="lastName">Last Name</label>
                </div>
                <div>
                    <input type="text" name="username" value="{{username}}" required>
                    <label for="username">Username</label>
                </div>
                <div>
                    <input type="email" name="email" value="{{email}}" required>
                    <label for="email">Email</label>
                </div>
                <div>
                    <input type="password" id="password" name="password" required>
                    <label for="password">Password</label>
                    <i class="material-icons" onclick="change(this)">visibility_off</i> 
                </div>
                <div>
                    <input type="password" id="confirmpassword" name="passwordConf" required>
                    <label for="passwordConf">Confirm Password</label>
                    {{!-- <i class="material-icons" onclick="change(this)">visibility_off</i>  --}}
                </div>
                <input type="submit" value="Sign up">
                <br>
                <div class="linkContainer">
                    <a href="/login">Already have an account? Login here</a>
                </div>
                
            </form>
        </div>
    </div>

    <script>
        function change(x){
            if(x.innerHTML === "visibility"){
                x.innerHTML = "visibility_off";
            }else{
                x.innerHTML = "visibility";
            }
            var pwd = document.getElementById("password");
            if(pwd.type === "password"){
                pwd.type = "text";
            }else{
                pwd.type = "password";
            }

            var pwd1 = document.getElementById("confirmpassword");
            if(pwd1.type === "password"){
                pwd1.type = "text";
            }else{
                pwd1.type = "password";
            }

        }

        let passwordField = document.getElementById("password");
        let confirmpasswordField = document.getElementById("confirmpassword");
        let form = document.getElementById("registerForm");

        function validateForm() {
            if(passwordField.value != confirmpasswordField.value){
                alert("Passwords do not match. Please try again.");
            }
            else{
                form.submit();
            }
        }
    </script>


    <script src="https://kit.fontawesome.com/b292d3856d.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</body>
</html>